@model Brand

@{
    ViewData["Title"] = "Добавление/редактирование марки автомобиля";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    
    <form class="form-group" method="post" asp-controller="Brand" asp-action="GetDataFromViewField" asp-route-id="@Model.Id">
        <input class="form-control" type="text" name="brandName" value="@Model.Name" placeholder="Введите марку..."/>
        <label class="form-control">
            @Html.CheckBox("active", Model.Active)
            Активный
        </label>
        <input type="submit" class="btn btn-primary" value="Сохранить"/>
    </form>
</div>
