@model AllBrandsAndModels

@{
    ViewData["Title"] = "Все марки и модели автомобилей";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <table border="1">
        @{
            foreach (Brand b in Model.Brands)
            {
                <tr>
                    <td width="50">Марка</td>
                    <td width="150">@b.Name</td>
                </tr>
                for (int i = 0; i < Model.Models.Count; i++)
                {
                    if (Model.Models[i].BrandId == b.Id)
                    {
                        if (i == 0)
                        {
                            <tr>
                                <td width="50">Модели:</td>
                                <td width="50">@Model.Models[i].Name</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td width="50"></td>
                                <td width="150">@Model.Models[i].Name</td>
                            </tr>
                        }
                    }
                }
            }
        }
    </table>
</div>
