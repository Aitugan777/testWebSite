@model Model

@{
    ViewData["Title"] = "Добавление/редактирование марки автомобиля";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <form class="form-group" method="post" asp-controller="Model" asp-action="GetDataFromViewField" asp-route-id="@Model.Id">
        <input class="form-control" type="text" name="modelName" value="@Model.Name" placeholder="Введите модель..."/>
        <select name="brandId" class="form-control">
            <option value="">Пожалуйста, выберите марку!</option>
            @{
                foreach (Brand brand in ViewBag.Brands)
                {
                    <option value="@brand.Id">@brand.Name</option>
                }
            }
        </select>
        <label class="form-control">
            @Html.CheckBox("active", Model.Active)
            Активный
        </label>
        <input type="submit" class="btn btn-primary" value="Сохранить"/>
    </form>
</div>
